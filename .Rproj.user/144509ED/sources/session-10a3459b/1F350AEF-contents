library(tidyverse)

lianglaoshitaiqiangle <- function(X, alpha, beta){
  
  n <- length(X)
  
  x <- sample(x = X, size = n, replace = TRUE)
  
  return(
    c(mle = 1/mean(x),
      post_mean = (n + alpha) * beta / (1 + beta*sum(x)),
      post_mode = (n + alpha - 1) * beta / (1 + beta*sum(x))
    )
  )
}

alpha <- 2
beta <- 1/2
n <- 25
X <- rexp(n = n, rate = 1)
B <- 2000

c(1:B) %>% 
  sapply( function(x) lianglaoshitaiqiangle(X = X, alpha = alpha, beta = beta) ) %>% 
  t()
